@model PatientManagement.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<h2>Are you sure you want to delete this patient?</h2>

<div>
    <h4>@Model.Full_Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Patient_Id</dt>
        <dd class="col-sm-9">@Model.Patient_Id</dd>
        <dt class="col-sm-3">DOB</dt>
        <dd class="col-sm-9">@Model.DOB.ToShortDateString()</dd>
        <dt class="col-sm-3">Age</dt>
        <dd class="col-sm-9">@Model.Age</dd>
        <dt class="col-sm-3">Gender</dt>
        <dd class="col-sm-9">@Model.Gender</dd>
        <dt class="col-sm-3">Referred By</dt>
        <dd class="col-sm-9">@Model.Referred_By</dd>
        <dt class="col-sm-3">Mobile No 1</dt>
        <dd class="col-sm-9">@Model.Mobile_No1</dd>
        <dt class="col-sm-3">Mobile No 2</dt>
        <dd class="col-sm-9">@Model.Mobile_No2</dd>
        <dt class="col-sm-3">Aaddhar No</dt>
        <dd class="col-sm-9">@Model.Aaddhar_No</dd>
        <dt class="col-sm-3">Email ID</dt>
        <dd class="col-sm-9">@Model.Email_ID</dd>
        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>
        <dt class="col-sm-3">Allergy</dt>
        <dd class="col-sm-9">@Model.Allergy</dd>
        <dt class="col-sm-3">Describe</dt>
        <dd class="col-sm-9">@Model.Describe</dd>
        <dt class="col-sm-3">Test Name</dt>
        <dd class="col-sm-9">@Model.Test_Name</dd>
        <dt class="col-sm-3">Total Test</dt>
        <dd class="col-sm-9">@Model.Total_Test</dd>
        <dt class="col-sm-3">Discount</dt>
        <dd class="col-sm-9">@Model.Discount</dd>
        <dt class="col-sm-3">Total Amount</dt>
        <dd class="col-sm-9">@Model.Total_Amount</dd>
        <dt class="col-sm-3">Payment Status</dt>
        <dd class="col-sm-9">@Model.Payment_Status</dd>
        <dt class="col-sm-3">Remark</dt>
        <dd class="col-sm-9">@Model.Remark</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Patient_Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
