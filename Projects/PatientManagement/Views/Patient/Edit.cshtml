@model PatientManagement.Models.Patient

@{
    ViewData["Title"] = "Edit Patient";
}

<h2>Edit Patient</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Patient_Id" />

    <div class="form-group">
        <label asp-for="Full_Name"></label>
        <input asp-for="Full_Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DOB"></label>
        <input asp-for="DOB" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <input asp-for="Gender" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Referred_By"></label>
        <input asp-for="Referred_By" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mobile_No1"></label>
        <input asp-for="Mobile_No1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mobile_No2"></label>
        <input asp-for="Mobile_No2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Aaddhar_No"></label>
        <input asp-for="Aaddhar_No" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email_ID"></label>
        <input asp-for="Email_ID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Allergy"></label>
        <input asp-for="Allergy" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Describe"></label>
        <input asp-for="Describe" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Test_Name"></label>
        <input asp-for="Test_Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Total_Test"></label>
        <input asp-for="Total_Test" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Discount"></label>
        <input asp-for="Discount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Total_Amount"></label>
        <input asp-for="Total_Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Payment_Status"></label>
        <input asp-for="Payment_Status" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Remark"></label>
        <input asp-for="Remark" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
