@model IEnumerable<PatientManagement.Models.Patient>

@{
    ViewData["Title"] = "Patient List";
}

<h2>Patient List</h2>

<p>
    <a class="btn btn-primary" href="/Patient/Create">Add New Patient</a>
</p>

<table class="table table-striped table-bordered table-responsive">
    <thead>
        <tr>
            <th>Patient ID</th>
            <th>Full Name</th>
            <th>DOB</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Referred By</th>
            <th>Mobile No1</th>
            <th>Mobile No2</th>
            <th>Aaddhar No</th>
            <th>Email ID</th>
            <th>Address</th>
            <th>Allergy</th>
            <th>Describe</th>
            <th>Test Name</th>
            <th>Total Test</th>
            <th>Discount</th>
            <th>Total Amount</th>
            <th>Payment Status</th>
            <th>Remark</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Patient_Id</td>
                <td>@patient.Full_Name</td>
                <td>@patient.DOB.ToShortDateString()</td>
                <td>@patient.Age</td>
                <td>@patient.Gender</td>
                <td>@patient.Referred_By</td>
                <td>@patient.Mobile_No1</td>
                <td>@patient.Mobile_No2</td>
                <td>@patient.Aaddhar_No</td>
                <td>@patient.Email_ID</td>
                <td>@patient.Address</td>
                <td>@patient.Allergy</td>
                <td>@patient.Describe</td>
                <td>@patient.Test_Name</td>
                <td>@patient.Total_Test</td>
                <td>@patient.Discount</td>
                <td>@patient.Total_Amount</td>
                <td>@patient.Payment_Status</td>
                <td>@patient.Remark</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Patient/Edit/@patient.Patient_Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Patient/Delete/@patient.Patient_Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
