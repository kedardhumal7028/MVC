@model IEnumerable<Student_Crud_Operation.Context.Contact>

@{
    ViewBag.Title = "All Records";
}

<h2>All Records</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Mobile No</th>
        <th>State</th>
        <th>Country</th>
        <th>District</th>
        <th>Address</th>
        <th>Postal Code</th>
        <th>Location</th>
        <th>Create Date</th>
        <th>Action</th>
    </tr>
    @foreach (var record in Model)
    {
        <tr>
            <td>@record.ID</td>
            <td>@record.FirstName</td>
            <td>@record.MiddleName</td>
            <td>@record.SurName</td>
            <td>@record.MobileNo</td>
            <td>@record.State</td>
            <td>@record.Country</td>
            <td>@record.District</td>
            <td>@record.Address</td>
            <td>@record.PostalCode</td>
            <td>@record.Location</td>
            <td>@record.CreateDate.ToString("yyyy-MM-dd")</td>
            <td>
                <a href="@Url.Action("Edit", "Student", new { id = record.ID })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("Delete", "Student", new { id = record.ID })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
