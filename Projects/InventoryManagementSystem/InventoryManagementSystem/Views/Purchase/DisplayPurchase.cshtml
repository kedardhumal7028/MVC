@model IEnumerable<InventoryManagementSystem.Models.Purchase>

@{
    ViewBag.Title = "DisplayPurchase";
}

<h2 class="text-center">Display Purchase</h2>

<p>
    @Html.ActionLink("Create New", "PurchaseProduct", "Purchase", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Purchase Product")
        </th>
        <th>
            @Html.DisplayName("Purchase Quantity")
        </th>
        <th>
            @Html.DisplayName("Purchase Date")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Purchase_prod)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Purchase_qnty)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Purchase_date)
    </td>
    <td>

        @Html.ActionLink("Edit", "Edit", "Purchase", new { id = item.id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Details", "Detail", "Purchase", new { id = item.id }, new { @class = "btn btn-success" })
        @Html.ActionLink("Delete", "DeleteProduct", "Purchase", new { id = item.id }, new { @class = "btn btn-danger" })
        
    </td>

</tr>
}

</table>
