@model List<InventoryManagementSystem.Models.Product>

@{
    ViewBag.Title = "DisplayProduct";
}

<h2 class="text-center">Display Product</h2>

<p>
    @Html.ActionLink("Create New", "CreateProduct", "Product", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr class="success">
        <th>
            @Html.DisplayName("Product Name")
        </th>
        <th>
            @Html.DisplayName("Product Quantity")
        </th>
        <th>
            @Html.DisplayName("Action")
        </th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td>
                @if (product != null && product.Product_name != null)
                {
                    @Html.DisplayFor(modelItem => product.Product_name)
                }
                else
                {
                    <text>N/A</text>
                }
            </td>
            <td>
                @if (product.Product_qnty != null)
                {
                    @Html.DisplayFor(modelItem => product.Product_qnty)
                }
                else
                {
                    <text>N/A</text>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateProduct", "Product", new { id = product.id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Details", "ProductDetail", "Product", new { id = product.id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "DeleteProduct", "Product", new { id = product.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
